<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="wrap_content" android:padding="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        card_view:cardElevation = "3dp"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/cardview_light_background"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/klasse"
                android:layout_alignParentTop="true"
                android:padding="16dp"
                android:textSize="18sp"
                android:textColor="@color/textColorPrimary"
                android:singleLine="true"
                android:layout_alignParentStart="true"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fach"
                android:padding="16dp"
                android:textSize="18sp"
                android:textColor="@color/textColorPrimary"
                android:singleLine="true"
                android:layout_toEndOf="@id/klasse"
                android:layout_toRightOf="@id/klasse"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/vertreter"
                android:padding="16dp"
                android:paddingEnd="5dp"
                android:layout_toRightOf="@id/fach"
                android:textSize="18sp"
                android:textColor="@color/textColorPrimary"
                android:singleLine="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/stunde"
                android:layout_below="@+id/klasse"
                android:padding="16dp"
                android:singleLine="true"
                android:layout_alignParentStart="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/raum"
                android:layout_below="@+id/fach"
                android:layout_toEndOf="@id/stunde"
                android:padding="16dp"
                android:singleLine="true"
                android:layout_toRightOf="@id/stunde"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lehrer"
                android:layout_below="@+id/vertreter"
                android:layout_toEndOf="@id/raum"
                android:padding="16dp"
                android:singleLine="true"
                android:layout_toRightOf="@id/raum"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/itemInfo"
                android:layout_below="@+id/stunde"
                android:layout_centerHorizontal="true"
                android:padding="16dp"
                />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>